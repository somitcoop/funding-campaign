<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="funding_loan_register_tree_view" model="ir.ui.view">
        <field name="name">funding.loan.register.tree</field>
        <field name="model">funding.loan.register</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="loan_request_id"/>
                <field name="loan_id"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="funding_loan_register_form_view" model="ir.ui.view">
        <field name="name">funding.loan.register.form</field>
        <field name="model">funding.loan.register</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="loan_request_id"/>
                        </group>
                        <group>
                            <field name="loan_id"/>
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="funding_loan_register_search_view" model="ir.ui.view">
        <field name="name">funding.loan.register.search</field>
        <field name="model">funding.loan.register</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="loan_request_id"/>
                <field name="loan_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Loan Request" name="group_request"
                            context="{'group_by': 'loan_request_id'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_funding_loan_register" model="ir.actions.act_window">
        <field name="name">Loan Registers</field>
        <field name="res_model">funding.loan.register</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
